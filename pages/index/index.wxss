/**index.wxss**/
@import "../style/cart/iconfont.wxss";
@import "../style/assessment.wxss";
@import "../style/seller.wxss";

.top text, .footer text {
  color: white;
}
button{
  outline: none;
  border: 0px;
}
.top {
  display: flex;
  height: 25%;
  width: 100%;
  position: absolute;
  top: 0pc;
  background-color: #4876ff;
}

.sellerIcon {
  height: 200rpx;
  width: 200rpx;
  position: relative;
  top: 5%;
  right: -5%;
}

.sellerInfo {
  height: 200rpx;
  width: 460rpx;
  position: relative;
  top: 10%;
  left: 10%;
  font-size: 50rpx;
  overflow: hidden;
}

.sendInfo {
  font-size: 25rpx;
  height: 50rpx;
  width: 450rpx;
  margin-top: 7rpx;
  margin-bottom: 40rpx;
  display: block;
}

.inform {
  font-size: 25rpx;
  height: 30rpx;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.activity {
  height: 50rpx;
  width: 600rpx;
  position: absolute;
  left: 30rpx;
  bottom: 5rpx;
  font-size: 25rpx;
}

.nav {
  position: relative;
  top: 300rpx;
  display: flex;
  height: 90rpx;
  width: 100%;
  text-align: left;
  background-color: white;
  line-height: 90rpx;
}

.on {
  border-bottom: 1px solid #4876ff;
}

.nav navigator {
  display: block;
  margin-left: 10%;
  width: 20%;
  text-align: center;
}

.leftNav {
  height: 700rpx;
  width: 25%;
  position: relative;
  top: 320rpx;
  left: -300rpx;
}

.leftNav navigator {
  display: block;
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid gray;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu {
  height: 700rpx;
  width: 75%;
  position: absolute;
  top: 35%;
  right: 0rpx;
}

.food {
  position: relative;
  display: block;
  height: 190rpx;
  width: 100%;
  background-color: white;
  margin-bottom: 5rpx;
  font-size: 22rpx;
}

.foodPic {
  height: 150rpx;
  width: 150rpx;
  margin: 10rpx;
  display: inline-block;
}
.foodName,.foodAsses,.foodPrice{
  position: absolute;
  height: 35rpx;
  left: 180rpx;
}
.foodName {
  top: 10rpx;
  height: 40rpx;
  font-size: 33rpx;
  overflow: hidden;
  text-overflow: ellipsis;
   display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.foodAsses {
  top: 70rpx;
}

.foodPrice {
  bottom: 50rpx;
  font-size: 45rpx;
  color: #ee2c2c;
}

.order {
  position: absolute;
  height: 50rpx;
  width: 50rpx;
  border-radius: 100%;
  font-size: 50rpx;
  line-height: 50rpx;
  background-color: #4876ff;
  color: white;
  top: 63%;
  padding: 0px;
}

.Add {
  left: 90%;
}

.Del {
  /* padding-left: 15rpx; */
  left: 73%;
  display: none;
}

.orderNum {
  position: absolute;
  top: 63%;
  left: 83%;
  height: 50rpx;
  width: 30rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 50rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.footer {
  height: 9%;
  width: 100%;
  position: fixed;
  bottom: 0px;
  background: #6b6b6b;
  z-index: 15;
}

.trolley {
  position: absolute;
  left: 30rpx;
  top: -27rpx;
  height: 90rpx;
  width: 90rpx;
  background: #363636;
  border: 3px solid #4f4f4f;
  border-radius: 100%;
  text-align: center;
  animation: myfirst 3s;
  
}

.icon-caigou {
  font-size: 30px;
  color: #282828;
  line-height: 45px;
}

.totalPrice {
  font-size: 40rpx;
  display: inline-block;
  margin-left: 20%;
  position: absolute;
  top: 10%;
}

.totalFoods {
  height: 40rpx;
  width: 40rpx;
  background-color: red;
  border-radius: 30%;
  text-align: center;
  font-size: 30rpx;
  position: relative;
  top: -40rpx;
  left: 100rpx;
  display: block;
  z-index: 1;
}

.footer .sendFee {
  display: block;
  font-size: 20rpx;
  margin-left: 21%;
  color: #cfcfcf;
  margin-top: 20rpx;
  position: absolute;
  top: 35%;
}

.footer .minSend {
  font-size: 40rpx;
  position: fixed;
  right: 6%;
  bottom: 2.5%;
